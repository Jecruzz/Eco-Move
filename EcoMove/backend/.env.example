# Puerto del servidor
PORT=5000

# MongoDB (para logs, challenges, rewards, etc.)
MONGODB_URI=mongodb://localhost:27017/movilidad_sostenible

# PostgreSQL (para usuarios)
POSTGRES_DB=movilidad_sostenible
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Backups
BACKUP_SCHEDULE=0 2 * * *   # Cada día a las 2 AM
BACKUP_ON_START=false       # Backup al iniciar servicio (true/false)

# Notas:
# BACKUP_SCHEDULE usa formato cron:
# ┌───────────── minuto (0 - 59)
# │ ┌───────────── hora (0 - 23)
# │ │ ┌───────────── día del mes (1 - 31)
# │ │ │ ┌───────────── mes (1 - 12)
# │ │ │ │ ┌───────────── día de la semana (0 - 7) (domingo=0 o 7)
# │ │ │ │ │
# * * * * *
